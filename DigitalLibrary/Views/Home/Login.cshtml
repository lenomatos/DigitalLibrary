@model DigitalLibrary.Models.User

@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin shadow rounded-0" }))
{
    @Html.AntiForgeryToken()
    <hr>
    <h1 class="h3 mb-3 font-weight-normal">Bem Vindo!</h1>
    <label for="inputEmail" class="sr-only">Email</label>
    <input asp-for="Email" type="text" id="inputEmail" class="form-control" placeholder="Seu Email" required autofocus>

    <label for="inputPassword" class="sr-only">Password</label>
    <input asp-for="Password" type="password" id="inputPassword" class="form-control mt-1" placeholder="Sua Senha" required>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @Html.Raw(TempData["ErrorMessage"])
        </div>
    }

    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
}